<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:ClassModifier="internal">

    <ControlTheme x:Key="{x:Type RepeatButton}"
                  BasedOn="{StaticResource {x:Type Button}}"
                  TargetType="RepeatButton" />

    <ControlTheme x:Key="SynthoraRepeatButtonTheme"
                  BasedOn="{StaticResource SynthoraButtonTheme}"
                  TargetType="RepeatButton" />

    <ControlTheme x:Key="CancelRepeatButtonTheme"
                  BasedOn="{StaticResource CancelButtonTheme}"
                  TargetType="RepeatButton" />

    <ControlTheme x:Key="SuccessRepeatButtonTheme"
                  BasedOn="{StaticResource SuccessButtonTheme}"
                  TargetType="RepeatButton" />

    <ControlTheme x:Key="WarningRepeatButtonTheme"
                  BasedOn="{StaticResource WarningButtonTheme}"
                  TargetType="RepeatButton" />

    <ControlTheme x:Key="DangerRepeatButtonTheme"
                  BasedOn="{StaticResource DangerButtonTheme}"
                  TargetType="RepeatButton" />

    <ControlTheme x:Key="ErrorRepeatButtonTheme"
                  BasedOn="{StaticResource ErrorButtonTheme}"
                  TargetType="RepeatButton" />

</ResourceDictionary>