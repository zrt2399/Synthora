        </TabItem>
        <TabItem Header="Ext">
            <StackPanel Spacing="10">
                <Menu VerticalAlignment="Top">
                    <MenuItem Header="MenuItem1">
                        <MenuItem Header="MenuItem2">
                            <MenuItem Header="MenuItem4" />
                            <MenuItem Header="MenuItem5" />
                            <MenuItem Header="MenuItem6" />
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="MenuItema">
                        <MenuItem Header="MenuItemb" />
                    </MenuItem>
                    <MenuItem Header="MenuItemc">
                        <MenuItem Header="1" />
                    </MenuItem>
                </Menu>
                <StackPanel Margin="10" Spacing="10">
                    <so:GroupBox HorizontalContentAlignment="Left" Header="so:GroupBox">
                        <Calendar />
                    </so:GroupBox>
                    <so:DropShadowChrome>
                        <TextBlock>DropShadowChrome</TextBlock>
                    </so:DropShadowChrome>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <GroupBox Width="50" Header="GroupBox">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>TextBlockTextBlock</TextBlock>
                            </StackPanel>
                        </GroupBox>
                        <Expander Header="Expander">Content</Expander>
                    </StackPanel>

                    <Expander CornerRadius="2"
                              ExpandDirection="Left"
                              Header="Expander">
                        <StackPanel Margin="10">
                            <Button>1</Button>
                            <Button>2</Button>
                        </StackPanel>
                    </Expander>
                    <Expander CornerRadius="3"
                              ExpandDirection="Right"
                              Header="Expander">
                        <StackPanel Margin="10">
                            <Button>1</Button>
                            <Button>2</Button>
                        </StackPanel>
                    </Expander>
                    <Expander CornerRadius="4"
                              ExpandDirection="Up"
                              Header="Expander">
                        <StackPanel Margin="10">
                            <Button>1</Button>
                            <Button>2</Button>
                        </StackPanel>
                    </Expander>
                    <Expander CornerRadius="5"
                              ExpandDirection="Down"
                              Header="Expander">
                        <StackPanel Margin="10">
                            <Button>1</Button>
                            <Button>2</Button>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </StackPanel>
        </TabItem>
        <TabItem Header="DataGrid">
            <UniformGrid Columns="1">
                <DataGrid x:Name="dataGrid"
                          Margin="10"
                          AutoGenerateColumns="True"
                          GridLinesVisibility="All"
                          HeadersVisibility="All"
                          ItemsSource="{Binding DataGridCollectionView}" />
                <DataGrid Margin="10"
                          AutoGenerateColumns="True"
                          GridLinesVisibility="Vertical"
                          ItemsSource="{Binding DataGridCollectionView}" />
                <DataGrid Margin="10"
                          AutoGenerateColumns="True"
                          ItemsSource="{Binding Employees}" />
            </UniformGrid>
