                            </Button>
                            <Button Command="{Binding ShowMessageTip}"
                                    CommandParameter="OK"
                                    Theme="{StaticResource SuccessButtonTheme}">
                                MessageTip.OK
                            </Button>
                            <Button Command="{Binding ShowMessageTip}"
                                    CommandParameter="Warning"
                                    Theme="{StaticResource WarningButtonTheme}">
                                MessageTip.Warning
                            </Button>
                            <Button Command="{Binding ShowMessageTip}"
                                    CommandParameter="Error"
                                    Theme="{StaticResource DangerButtonTheme}">
                                MessageTip.Error
                            </Button>
