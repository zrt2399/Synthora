<Window x:Class="Synthora.Demo.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:so="https://github.com/zrt2399/Synthora"
        xmlns:vm="using:Synthora.Demo.ViewModels"
        Title="Synthora.Demo"
        Width="800"
        Height="450"
        x:DataType="vm:MainWindowViewModel"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <TabControl x:Name="TabControl">
        <TabItem Header="Base">
            <ScrollViewer>
                <StackPanel Margin="10" Spacing="10">
                    <TextBox Text="{Binding Greeting}" TextWrapping="Wrap" />
                    <TextBox Text="{Binding Value}" TextWrapping="Wrap" />
                    <PathPicker UseFolderDialog="True" Watermark="Pick a folder" />
                    <PathPicker FilePickerFileTypes="{Binding FilePickerFileTypes}"
                                SelectedPaths="{Binding SelectedFiles}"
                                Watermark="Pick a file" />
                    <Button HorizontalAlignment="Center" Command="{Binding Show}">
                        ContextMenuButton
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="123456">
                                    <MenuItem Header="789101112" />
                                </MenuItem>
                                <Separator />
                                <MenuItem Foreground="Red"
                                          Header="131415"
                                          Icon="{materialIcons:MaterialIconExt Kind=Delete}" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button>Button1</Button>
                        <Separator Theme="{StaticResource VerticalSeparatorTheme}" />
                        <Button>Button2</Button>
                        <Separator Theme="{StaticResource VerticalSeparatorTheme}" />
                        <Button>Button3</Button>
                        <Separator Theme="{StaticResource VerticalSeparatorTheme}" />
                        <Button>Button4</Button>
                    </StackPanel>
                    <Separator Theme="{StaticResource HorizontalSeparatorTheme}" />
                    <Button Theme="{StaticResource CancelButtonTheme}" ToolTip.Tip="CancelButtonTheme">CancelButtonTheme</Button>
                    <Button Theme="{StaticResource DangerButtonTheme}" ToolTip.Tip="DangerButtonTheme">DangerButtonTheme</Button>
                    <ToggleButton ToolTip.Tip="ToggleButton">ToggleButton</ToggleButton>
                    <DropDownButton>DropDownButton</DropDownButton>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <CheckBox>CheckBox</CheckBox>
                        <CheckBox IsChecked="{x:Null}">CheckBox</CheckBox>
                    </StackPanel>
                    <GridSplitter Height="4" />
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <RadioButton>RadioButton1</RadioButton>
                        <RadioButton>RadioButton2</RadioButton>
                        <RadioButton IsChecked="{x:Null}">RadioButton3</RadioButton>
                    </StackPanel>
                    <ListBox>
                        <ListBoxItem>123456</ListBoxItem>
                        <ListBoxItem>7891011</ListBoxItem>
                        <ListBoxItem>12131415</ListBoxItem>
                    </ListBox>
                    <TreeView>
                        <TreeViewItem Header="abcdefghijklmnopqrstuvwxyz">
                            <TreeViewItem Header="1234567890">
                                <TreeViewItem Header="11121314151617181920" />
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeView>
                    <NumericUpDown Value="12" />
                    <SelectableTextBlock>SelectableTextBlock</SelectableTextBlock>
                    <TextBlock>TextBlock</TextBlock>
                    <HyperlinkButton>HyperlinkButton</HyperlinkButton>
                    <ComboBox>
                        <ComboBoxItem>12345678910111213141516</ComboBoxItem>
                        <ComboBoxItem>abcdefghijklmnopqrstuvwxyz</ComboBoxItem>
                    </ComboBox>
                    <DatePicker />
                    <TimePicker />
                    <StackPanel Orientation="Horizontal">
                        <ToggleSwitch OffContent="{x:Null}" OnContent="{x:Null}" />
                        <ToggleSwitch OffContent="123" OnContent="456789" />
                        <ToggleSwitch />
                    </StackPanel>
                    <Slider Name="Slider" />
                    <ProgressBar ShowProgressText="True" Value="{Binding #Slider.Value}" />
                    <Slider Name="VerticalSlider" Orientation="Vertical" />
                    <ProgressBar Orientation="Vertical"
                                 ShowProgressText="True"
                                 Value="{Binding #VerticalSlider.Value}" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Ext">
            <StackPanel Spacing="10">
                <Menu VerticalAlignment="Top">
                    <MenuItem Header="MenuItem1">
                        <MenuItem Header="MenuItem2">
                            <MenuItem Header="MenuItem3" />
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="MenuItem4">
                        <MenuItem Header="MenuItem5" />
                    </MenuItem>
                    <MenuItem Header="MenuItem6">
                        <MenuItem Header="1" />
                    </MenuItem>
                </Menu>
                <StackPanel Margin="10" Spacing="10">
                    <so:GroupBox Padding="0"
                                 HorizontalContentAlignment="Left"
                                 Header="so:GroupBox">
                        <Calendar />
                    </so:GroupBox>

                    <StackPanel Orientation="Horizontal">
                        <GroupBox Header="GroupBox">Content</GroupBox>
                        <Expander Header="Expander">Content</Expander>
                    </StackPanel>

                    <Expander CornerRadius="2"
                              ExpandDirection="Left"
                              Header="Expander">
                        <StackPanel Margin="10">
                            <Button>1</Button>
                            <Button>2</Button>
                        </StackPanel>
                    </Expander>
                    <Expander CornerRadius="3"
                              ExpandDirection="Right"
                              Header="Expander">
                        <StackPanel Margin="10">
                            <Button>1</Button>
                            <Button>2</Button>
                        </StackPanel>
                    </Expander>
                    <Expander CornerRadius="4"
                              ExpandDirection="Up"
                              Header="Expander">
                        <StackPanel Margin="10">
                            <Button>1</Button>
                            <Button>2</Button>
                        </StackPanel>
                    </Expander>
                    <Expander CornerRadius="5"
                              ExpandDirection="Down"
                              Header="Expander">
                        <StackPanel Margin="10">
                            <Button>1</Button>
                            <Button>2</Button>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </StackPanel>
        </TabItem>
        <TabItem Header="DataGrid">
            <UniformGrid Columns="1">
                <DataGrid x:Name="dataGrid"
                          Margin="10"
                          AutoGenerateColumns="True"
                          GridLinesVisibility="All"
                          HeadersVisibility="All"
                          ItemsSource="{Binding DataGridCollectionView}" />
                <DataGrid Margin="10"
                          AutoGenerateColumns="True"
                          GridLinesVisibility="Vertical"
                          ItemsSource="{Binding DataGridCollectionView}" />
                <DataGrid Margin="10"
                          AutoGenerateColumns="True"
                          ItemsSource="{Binding Employees}" />
            </UniformGrid>
        </TabItem>
    </TabControl>
</Window>