                           PlacementTarget="{Binding $parent[Window]}"
                           VerticalOffset="16">
                        <Border Margin="4"
                                Padding="4"
                                Background="White"
                                BorderBrush="DarkGray"
                                BorderThickness="1"
                                BoxShadow="0 0 6 0 DarkGray">
                            <TextBlock Text="Popup>Border>TextBlock" />
                        </Border>
                    </Popup>
                    <DropDownButton>DropDownButton</DropDownButton>
